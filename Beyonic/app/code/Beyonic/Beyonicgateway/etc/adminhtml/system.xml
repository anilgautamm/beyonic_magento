<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="beyonicgateway" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Beyonic Mobile Payments</label>
                <field id="active" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="apikey" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Api Key</label>
                    <tooltip>Please enter your api key (You can get it from your beyonic profile).</tooltip>
                </field>
                <field id="description" translate="label" type="textarea" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Description</label>
                    <tooltip>This description will be shown on your checkout payment tab.</tooltip>
                </field>
                <field id="description2" translate="label" type="textarea" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Description 2</label>
                    <tooltip>This description will be shown on your checkout confirm tab.</tooltip>
                </field>
                <field id="beyonic_url" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <frontend_model>Beyonic\Beyonicgateway\Model\Beyonicurl</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config> 